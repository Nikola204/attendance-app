<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvQrTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QR kod predavanja"
        android:textColor="#212121"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvQrWindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Vrijedi od - do"
        android:textColor="#757575"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/ivPredavanjeQr"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:contentDescription="QR kod predavanja" />

    <TextView
        android:id="@+id/tvQrStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Status koda"
        android:textAlignment="center"
        android:textColor="#424242"
        android:textSize="14sp" />

</LinearLayout>
